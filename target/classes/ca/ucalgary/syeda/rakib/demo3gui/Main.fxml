<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../resources/art.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ucalgary.syeda.rakib.demo3gui.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="FILE">
                    <items>
                        <MenuItem fx:id="itemLoad" mnemonicParsing="false" onAction="#handleItemLoad" text="LOAD" />
                        <MenuItem fx:id="itemSave" mnemonicParsing="false" onAction="#itemSave" text="SAVE" />
                        <MenuItem fx:id="itemQuit" mnemonicParsing="false" onAction="#itemQuit" text="QUIT" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="HELP">
                    <items>
                        <MenuItem onAction="#showAboutDialog" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="nameField" mnemonicParsing="false" onAction="#handleAddStudent" text="Enter a new student" />
                <Button fx:id="yearField" mnemonicParsing="false" onAction="#addYear" text="Year" />
                <Button fx:id="majorField" mnemonicParsing="false" onAction="#addMajor" text="Major" />
                <Button fx:id="idField" mnemonicParsing="false" onAction="#addUcid" text="UCID" />
                <Button fx:id="ageField" mnemonicParsing="false" onAction="#addAge" text="Age" />
                <Button fx:id="daysField" mnemonicParsing="false" onAction="#addDays" text="Personal days used" />
                <Button fx:id="amountField" mnemonicParsing="false" onAction="#addHours" text="Amount of hours studied in one week" />
                <Button fx:id="assignmentField" mnemonicParsing="false" onAction="#addAmount" text="Amount of assignments done" />
                <Button fx:id="printNamesButton" mnemonicParsing="false" onAction="#printNames" text="Print Names" />
                <Button fx:id="printAverageAgeButton" mnemonicParsing="false" onAction="#printAverageAge" text="Print Average Age" />
                <Button fx:id="printStudentsNeedingAttentionButton" mnemonicParsing="false" onAction="#printStudentsNeedingAttention" text="Print Students Needing Attention" />
                <Button fx:id="predictNextYearStudyHoursButton" mnemonicParsing="false" onAction="#predictNextYearStudyHours" text="Predict Next Year's Study Hours" />
                <Button fx:id="printSortedStudentsButton" mnemonicParsing="false" onAction="#printSortedStudents" text="Print Sorted Students" />
                <ListView fx:id="studentListView" />
                <VBox spacing="10">
                    <Button fx:id="UpdateStudentDetails" onAction="#handleUpdateStudentDetails"
                            text="Update Student Details"/>
                    <Button fx:id="SaveToCSV" onAction="#handleSaveToCSV" text="Save Students to CSV"/>
                    <Button fx:id="LoadFromCSV" onAction="#handleLoadFromCSV" text="Load Students from CSV"/>
                </VBox>

            </children>
        </VBox>
    </center>
</BorderPane>
